<div class="container">
<h1>{{title}}</h1>
<p>Welcome to online shopping experience</p>
</div>

<!--loop through all products-->
<div class="container">
{{# each products }}

<div class="row" >
    {{#each this}}
  <div class="col-sm-6 col-md-4" >
    
    <div class="thumbnail" id="product-menu">
      <img src="{{this.url}}" id="images" alt="No picture available">
      <div class="caption">
        <h5><span style="text-transform: none;">{{this.title}}</span></h5>
        <p class="description">..........</p>
          <div class="clearfix">
              <p><span style=" font-weight: 700;">Rs.{{this.price}}</span></p>
              <a href="#" class=" pull-left">
                  <span style="color:#A4A49D;"><i class="fa fa-gratipay fa-2x" aria-hidden="true"></i></span></a>
              <!--<a href="/checkout" class="btn btn-success pull-right" role="button"><i class="fa fa-shopping-cart pull-left" aria-hidden="true">Add to cart</i></a>-->
      </div>
          </div>
    </div>
      
  </div>
    
    {{/each}}
</div>
    
{{/each}}
</div>